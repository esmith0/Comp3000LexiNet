@model LexiNetV2.FeedbackTbl

@{
    ViewBag.Title = "Create";
}

<h2>Give your feedback!</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class = "control-label col-md-2" ><b> Readability Rating (0-5):</b></p> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.readabilityRating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.readabilityRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b> Word and Image Spacing Rating (0-5):</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.spacingRating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.spacingRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b> Colour use (0-5):</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.colourRating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.colourRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b> Reviewed By:</b></p>
            <div class="col-md-10">
                @Html.DropDownList("userID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b> Please select the resource name:</b></p>
            <div class="col-md-10">
                @Html.DropDownList("resourceID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.resourceID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
